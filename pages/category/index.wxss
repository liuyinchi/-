/* pages/category/index.wxss */
page{
  height: 100%;
}
.cates{
  height: 100%;
}

.cates_container{
  height: calc(100% - 90rpx);
  display: flex;
}

.left_menu{
  flex: 2;
}

.left_menu .active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}

.menu_item{
  height: 80rpx;
  line-height: 80rpx;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
}

.right_content{
  flex: 5;
}

.goods_title{
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delimiter{
  color: #ccc;
  padding: 0 10px;
}

.goods_list{
  display: flex;
  flex-wrap: wrap;
}

.goods_list navigator{
  width: 33.33%;
  text-align: center;
}

.goods_list navigator image{
  width: 50%;
}